package com.mycompany.proyect1;

import javax.swing.JOptionPane;

/**
 *
 * @author garval
 */
public class variables {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        
        String cadena=JOptionPane.showInputDialog("mete una cadena");
        JOptionPane.showMessageDialog(null, "tu cadena es "+cadena);
        
        int entero=Integer.parseInt(JOptionPane.showInputDialog("escribe un numero entero"));
        JOptionPane.showMessageDialog(null, "tu numero entero es "+entero);
        
        float flotante=Float.parseFloat(JOptionPane.showInputDialog("escribe un flotante"));
        JOptionPane.showMessageDialog(null, "tu flotante es "+flotante);
        
        char caracter= JOptionPane.showInputDialog("Mete un caracter").charAt(0);
        JOptionPane.showMessageDialog(null,"Este es tu caracter "+caracter);
        
        
        
    }
    
}
